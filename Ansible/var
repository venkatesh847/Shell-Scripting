- name: variable
  hosts: all
  vars:
    Url: play.google.com
  tasks:
    - name: url1
      debug:
        msg: "url = {{Url}}"
    - name: url2
      vars:
        Url: task.google.com
      debug:
        msg: "url = {{Url}}"

- name: invar
  hosts: all
  tasks:
    - name : url1
      debug:
        msg: "url = {{url}}"

- name: file
  hosts: all
  vars_file:
    - var.file
  tasks:
   - name: url2
     debug:
       msg: "url = {{url}}"

